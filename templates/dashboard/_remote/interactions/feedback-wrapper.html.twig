<div class="row">
	<div class="col">
		<h2>Feedbacks</h2>
	</div>
</div>

<div class="row g-4">
	{% for feedback in websiteData.websiteConfig.event.feedback %}
		<div class="col-md-6">
			<div class="card interaction-card card shadow-sm">
				<h5 class="card-header m-0 d-flex justify-content-between align-items-center">
					Note :
					{{ feedback.stars }}
					{{ include('dashboard/_remote/_delete_feedback_form.html.twig') }}
				</h5>
				<div class="card-body">
					<blockquote class="blockquote mb-0">
						<p>{{ feedback.message }}</p>
						<footer class="blockquote-footer text-end">
							{% if feedback.user %}

								{{ feedback.user.firstname }}
								{{ feedback.user.lastname }}<br>
								{{ feedback.user.email }}
								-
								{{ feedback.user.telephone }}
							{% else %}
								Feedback anonyme
							{% endif %}
						</footer>
					</blockquote>
				</div>
			</div>
		</div>
	{% endfor %}
</div>
